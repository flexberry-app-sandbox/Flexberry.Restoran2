<h3 class="ui header">{{t "forms.i-i-s-restoran2-гости-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.кодГостя
      class=(if (v-get validationModel "кодГостя" "isInvalid") "error")
      label=(t "forms.i-i-s-restoran2-гости-e.кодГостя-caption")
      data-test-i-i-s-restoran2-гости-e-кодГостя=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "кодГостя" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.фИО
      class=(if (v-get validationModel "фИО" "isInvalid") "error")
      label=(t "forms.i-i-s-restoran2-гости-e.фИО-caption")
      data-test-i-i-s-restoran2-гости-e-фИО=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "фИО" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.телефон
      class=(if (v-get validationModel "телефон" "isInvalid") "error")
      label=(t "forms.i-i-s-restoran2-гости-e.телефон-caption")
      data-test-i-i-s-restoran2-гости-e-телефон=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "телефон" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-restoran2-гости-e.скидка-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.скидка
      displayAttributeName="код"
      autocomplete=true
      relationName="скидка"
      projection="СкидкаL"
      title=(t "forms.i-i-s-restoran2-гости-e.скидка-caption")
      readonly=readonly
      componentName="скидкаLookup"
      class=(if (v-get validationModel "скидка" "isInvalid") "error")
      data-test-i-i-s-restoran2-гости-e-скидка=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "скидка" "message")}}
  </div>
</form>
