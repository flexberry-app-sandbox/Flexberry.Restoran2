<h3 class="ui header">{{t "forms.i-i-s-restoran2-стол-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номерСтола
      class=(if (v-get validationModel "номерСтола" "isInvalid") "error")
      label=(t "forms.i-i-s-restoran2-стол-e.номерСтола-caption")
      data-test-i-i-s-restoran2-стол-e-номерСтола=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номерСтола" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.колвоМест
      class=(if (v-get validationModel "колвоМест" "isInvalid") "error")
      label=(t "forms.i-i-s-restoran2-стол-e.колвоМест-caption")
      data-test-i-i-s-restoran2-стол-e-колвоМест=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "колвоМест" "message")}}
  </div>
  <div class="field" data-test-i-i-s-restoran2-стол-e-статус="true">
    <label>{{t "forms.i-i-s-restoran2-стол-e.статус-caption"}}</label>
    {{flexberry-dropdown
      items=(flexberry-enum "i-i-s-restoran2-статусы")
      value=model.статус
      class=(if (v-get validationModel "статус" "isInvalid") "error")
      readonly=readonly
    }}
    {{flexberry-validationmessage error=(v-get validationModel "статус" "message")}}
  </div>
</form>
